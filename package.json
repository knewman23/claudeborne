{
  "name": "claudeborne",
  "version": "0.1.0",
  "description": "FromSoftware-themed pixel art visualizer for Claude Code events",
  "type": "module",
  "bin": {
    "claudeborne": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/cli",
    "dev:all": "npx concurrently \"npm run dev --workspace=packages/web\" \"npm run dev --workspace=packages/cli\"",
    "build": "npm run build --workspace=packages/web && npm run build --workspace=packages/cli",
    "build:publish": "bash scripts/build-publish.sh",
    "prepublishOnly": "npm run build:publish",
    "start": "npm run start --workspace=packages/cli"
  },
  "dependencies": {
    "express": "^5.1.0",
    "open": "^10.1.0",
    "ws": "^8.18.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "pixel-art",
    "fromsoft",
    "bloodborne",
    "dark-souls",
    "elden-ring",
    "visualizer"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/knewman23/claudeborne.git"
  }
}
